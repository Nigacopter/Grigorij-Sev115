#include <iostream>
#include <fstream>
using namespace std;
void funkc1()
{
	int choice2;
	do
	{
		cout << endl
			<< "1 - Iemaksat naudu\n"
			<< "2 - Iznemt naudu\n";
		cin >> choice2;
		switch (choice2)
		{
		case 1:
			break;
		case 2:
			break;
		}

	} while (choice2 != 2);
}
