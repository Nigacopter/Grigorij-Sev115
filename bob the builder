int main(int piev2)
{
	//int summa;
	int choice;

	ofstream asd;
	asd.open("PIN.txt");
	int pin = 0000;

	do
	{


		cout << endl
			<< " 1 - Skaidras naudas iemaksa un iznemsana EUR valuta\n"
			<< " 2 - Parbaudit un izdrukat kartes konta atlikumu\n"
			<< " 3 - Mainit kartes PIN kodu bez maksas\n"
			<< " 4 - Pabeigt darbibas\n"
			<< " Enter your choice and press return: ";
		cin >> choice;

		switch (choice)
		{
		case 1:

			funkc1(/*summa*/);

			break;
		case 2:
			funkc2();
			break;
		case 3:
			cout << "Ja gribat izmainit PIN kodu, uzrakstiet janu (PIN: XXXX):";
			cin >> pin;
			break;
		case 4:
			cout << "End of Program.\n";
			break;
		default:
			cout << "Not a Valid Choice. \n" << "Choose again.\n";
			break;
		}

	} while (choice != 5);
	return 0;
}
