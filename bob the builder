#include <iostream>
#include <fstream>
#include <string>
using namespace std;
bool isNumber(const string& s)
{
	for (char const& ch : s) {
		if (std::isdigit(ch) == 0)
			return false;
	}
	return true;
}
int funkc1(/*int summa*/)
{
	int choice2;
	bool a = false;
	string piev;
	string noniem;
	int noniem2;
	int piev2;
	int summa = 100;
	ofstream dengi;
	dengi.open("money.txt", ios::ate);
	cout << endl
		<< "1 - Iemaksat naudu\n"
		<< "2 - Iznemt naudu\n"
		<< " Enter your choice and press return: ";
	cin >> choice2;
	switch (choice2)
	{
	case 1:
		cout << "Ievadiet summu kuru jus gribat ielikt:";

		do {
			cin >> piev;
			if (isNumber(piev) == false) {
				cout << "Ievadiet summu ar skaitliem:";
			}
			else {
				a = true;	piev2 = stoi(piev);
				summa = summa + piev2;
				dengi << summa << endl;
			}
		} while (a == false);


		break;
	case 2:
		cout << "Ievadiet summu kuru jus gribat izniemt:";
		do {
			cin >> noniem;
			if (isNumber(noniem) == false) {
				cout << "Ievadiet summu ar skaitliem:";
			}
			else a = true;
		} while (a == false);
		noniem2 = stoi(noniem);
		summa = summa - noniem2;
		dengi << summa << endl;
		return summa - noniem2;
		break;
	}


}
